# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# OpenAI Embedding Configuration (Default)
EMBEDDER_PROVIDER=openai
OPENAI_API_KEY=your_openai_api_key
OPENAI_API_BASE=                      # Optional: Custom OpenAI API base URL
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMS=1536                   # Dimensions of the embedding model (varies by model)

# Alternative Embedders (uncomment and set EMBEDDER_PROVIDER to use)

# For Hugging Face
# EMBEDDER_PROVIDER=huggingface
# HUGGINGFACE_MODEL=sentence-transformers/all-mpnet-base-v2
# HUGGINGFACE_MODEL_KWARGS={"device":"cpu"}
# EMBEDDING_DIMS=768

# For Ollama
# EMBEDDER_PROVIDER=ollama
# OLLAMA_MODEL=llama2
# OLLAMA_BASE_URL=http://localhost:11434
# EMBEDDING_DIMS=4096

# For Azure OpenAI
# EMBEDDER_PROVIDER=azure
# AZURE_API_KEY=your_azure_api_key
# AZURE_ENDPOINT=https://your-resource.openai.azure.com
# AZURE_DEPLOYMENT=your-deployment-name
# EMBEDDING_DIMS=1536

# For LM Studio
# EMBEDDER_PROVIDER=lmstudio
# LMSTUDIO_BASE_URL=http://localhost:1234
# EMBEDDING_DIMS=4096

# Server Configuration
USE_SSE=false
PORT=8080 